@model Entidades.Carteleras
@{
    ViewBag.Title = "Carteleras";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>Carteleras</h2>

    <!-- Formulario - Asignar Pelicula a Sala -->
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title text-center">Crear nueva cartelera</h3></div>
            <div class="panel-body">
                <form role="form">
                    
                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Sede</h3>
                      </div>
                      <div class="panel-body">
                        @Html.DropDownList("IdSede",new SelectList(ViewBag.Sedes,"IdSede","Nombre"), new { @class = "form-control" })
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Peliculas Disponibles</h3>
                      </div>
                      <div class="panel-body">
                         @Html.DropDownList("IdPelicula",new SelectList(ViewBag.Peliculas,"IdPelicula","Nombre"), new { @class = "form-control" })
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Horario de Inicio</h3>
                      </div>
                      <div class="panel-body">
                        @Html.TextBox("HoraInicio", null, new { @class = "form-control" })
                      </div>
                    </div>
                  </div>

                    <div class="col-md-12">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Dias de semana en que sera proyectada</h3>
                      </div>
                      <div class="panel-body">
                          <div class="col-md-3">Lunes @Html.CheckBox("Lunes", false)</div>
                          <div class="col-md-3">Martes @Html.CheckBox("Martes", false)</div>
                          <div class="col-md-3">Miercoles @Html.CheckBox("Miercoles", false)</div>
                          <div class="col-md-3">Jueves @Html.CheckBox("Jueves", false)</div>
                          <div class="col-md-3">Viernes @Html.CheckBox("Viernes", false)</div>
                          <div class="col-md-3">Sabado @Html.CheckBox("Sabado", false)</div>
                          <div class="col-md-3">Domingo @Html.CheckBox("Domingo", false)</div>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Vigencia de Cartelera</h3>
                      </div>
                      <div class="panel-body">

                        @Html.Label("FechaInicio", "Fecha de Inicio")
                        @Html.TextBox("FechaInicio", null, new { @class = "form-control" })
                        <br />
                        @Html.Label("FechaFin", "Fecha de Fin")
                        @Html.TextBox("FechaFin", null, new { @class = "form-control" })
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Sala</h3>
                      </div>
                      <div class="panel-body">
                        <select class="form-control">
                          <option>????</option>
                          <option>????</option>
                          <option>????</option>
                        </select>
                      </div>
                    </div>
                  </div>

                 <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Peliculas Disponibles</h3>
                      </div>
                      <div class="panel-body">
                         @Html.DropDownList("IdPelicula",new SelectList(ViewBag.Peliculas,"IdPelicula","Nombre"), new { @class = "form-control" })
                      </div>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <button type="submit" class="btn btn-success btn-block">Crear Cartelera</button>
                  </div>
                </form>
             </div>
        </div>
    </div>
       
    <br />
