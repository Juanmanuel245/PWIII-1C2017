@model Entidades.Carteleras
@{
    ViewBag.Title = "EditarCartelera";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditarCartelera</h2>
<br />
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading fondoCabeceraAdmin"><h3 class="panel-title text-center letraBlanca">Nueva Cartelera</h3></div>
            <div class="panel-body">
                @using(Html.BeginForm())
                {
                    
                  <div class="col-md-3">
                    <div class="panel panel-default">
                      <div class="panel-heading fondoCabeceraAdmin2"><h3 class="panel-title text-center">Sede</h3></div>
                      <div class="panel-body">
                        @Html.DropDownList("IdSede",new SelectList(ViewBag.Sedes,"IdSede","Nombre"), new { @class = "form-control", Value = Model.IdSede })
                        @Html.ValidationMessageFor(model => model.IdSede, "", new { @class = "text-danger" })
                      </div>
                    </div>
                  </div>
                    
                    <div class="col-md-3">
                    <div class="panel panel-default">
                      <div class="panel-heading fondoCabeceraAdmin2"><h3 class="panel-title text-center">Sala</h3></div>
                      <div class="panel-body">
                        <select class="form-control" name="NumeroSala" id="NumeroSala">
                          <option value="@Model.NumeroSala">Sala @Model.NumeroSala</option>
                          <option value="1">Sala 1</option>
                          <option value="2">Sala 2</option>
                          <option value="3">Sala 3</option>
                          <option value="4">Sala 4</option>
                          <option value="5">Sala 5</option>
                          <option value="6">Sala 6</option>
                          <option value="7">Sala 7</option>
                        </select>
                      </div>
                    </div>
                  </div>    

                  <div class="col-md-3">
                    <div class="panel panel-default">
                      <div class="panel-heading fondoCabeceraAdmin2"><h3 class="panel-title text-center">Peliculas Disponibles</h3></div>
                      <div class="panel-body">
                         @Html.DropDownList("IdPelicula",new SelectList(ViewBag.Peliculas,"IdPelicula","Nombre"), new { @class = "form-control", Value = Model.IdPelicula })
                         @Html.ValidationMessageFor(model => model.IdPelicula, "", new { @class = "text-danger" })
                      </div>
                    </div>
                  </div>
                    
                    <div class="col-md-3">
                    <div class="panel panel-default">
                      <div class="panel-heading fondoCabeceraAdmin2"><h3 class="panel-title text-center">Versiones Disponibles</h3></div>
                      <div class="panel-body">
                         @Html.DropDownList("IdVersion",new SelectList(ViewBag.Versiones,"IdVersion","Nombre"), new { @class = "form-control", Value = Model.IdVersion })
                          @Html.ValidationMessageFor(model => model.IdVersion, "", new { @class = "text-danger" })
                      </div>
                    </div>
                  </div>

                  

                    <div class="col-md-12">
                    <div class="panel panel-default">
                      <div class="panel-heading fondoCabeceraAdmin2"><h3 class="panel-title text-center">Dias de semana en que sera proyectada</h3></div>
                      <div class="panel-body text-center">
                          <div class="col-md-3 panel panel-default">Lunes @Html.CheckBox("Lunes", Model.Lunes)</div> 
                          <div class="col-md-3 panel panel-default">Martes @Html.CheckBox("Martes", Model.Martes)</div>
                          <div class="col-md-3 panel panel-default">Miercoles @Html.CheckBox("Miercoles", Model.Miercoles)</div>
                          <div class="col-md-3 panel panel-default">Jueves @Html.CheckBox("Jueves", Model.Jueves)</div>
                          <div class="col-md-3 panel panel-default">Viernes @Html.CheckBox("Viernes", Model.Viernes)</div>
                          <div class="col-md-3 panel panel-default">Sabado @Html.CheckBox("Sabado", Model.Sabado)</div>
                          <div class="col-md-3 panel panel-default">Domingo @Html.CheckBox("Domingo", Model.Domingo)</div>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-8 form-inline text-center">
                    <div class="panel panel-default">
                      <div class="panel-heading fondoCabeceraAdmin2"><h3 class="panel-title text-center">Vigencia de Cartelera</h3></div>
                      <div class="panel-body">

                        @Html.Label("FechaInicio", "Fecha de Inicio")
                        @Html.TextBox("FechaInicio", null, new { @class = "form-control", type = "Date", Value = Model.FechaInicio })
                        @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                        
                        @Html.Label("FechaFin", "Fecha de Fin")
                        @Html.TextBox("FechaFin", null, new { @class = "form-control", type = "Date", Value = Model.FechaFin })
                        @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading fondoCabeceraAdmin2"><h3 class="panel-title text-center">Horario de Inicio</h3></div>
                      <div class="panel-body">
                        @Html.TextBox("HoraInicio", null, new { @class = "form-control", Value = Model.HoraInicio})
                        @Html.ValidationMessageFor(model => model.HoraInicio, "", new { @class = "text-danger" })

                      </div>
                    </div>
                  </div>

                 

                  <div class="col-md-12">
                    <button type="submit" class="btn btn-success btn-block">Crear Cartelera</button>
                  </div>
                    
                @Html.TextBox("IdCartelera", null, new {type = "hidden", Value = Model.IdCartelera })
                    
                }
             </div>
        </div>
    </div>
