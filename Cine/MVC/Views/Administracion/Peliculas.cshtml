@model IEnumerable<Entidades.Peliculas>
@{
    ViewBag.Title = "Peliculas";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<h3 class="text-center">Administracion - Peliculas</h3>
<div class="container">

    <!-- Formulario - Asignar Pelicula a Sala -->
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title text-center">Asignar pelicula a Sede y Sala</h3></div>
            <div class="panel-body">
                <form role="form">
                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Peliculas Disponibles</h3>
                      </div>
                      <div class="panel-body">
@*                        <select class="form-control">
                          <option>Rapidos y Furiosos 8</option>
                          <option>Un Jefe en Pañales</option>
                          <option>Dia del Atentado</option>
                          <option>La Bella y La Bestia</option>
                          <option>Nunca Digas su nombre</option>
                        </select>*@
                        @Html.DropDownList("IdPelicula",new SelectList(Model,"IdPelicula","Nombre"), new { @class = "form-control" })

                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Sede</h3>
                      </div>
                      <div class="panel-body">
                        @Html.DropDownList("IdSede",new SelectList(@ViewBag.Sedes,"IdSede","Nombre"), new { @class = "form-control" })
                      </div>
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title text-center">Sala</h3>
                      </div>
                      <div class="panel-body">
                        <select class="form-control">
                          <option>????</option>
                          <option>????</option>
                          <option>????</option>
                        </select>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <button type="submit" class="btn btn-success btn-block">Asignar Pelicula</button>
                  </div>
                </form>
             </div>
        </div>
    </div>
       
    <br />
    <!-- Catalogo de Peliculas -->
    <div class="row" >
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title text-center">Catalogo de Peliculas</h3>
          </div>
          <div class="panel-body">
        <table class="table table-hover text-center">
            <tr>
              <td><strong>Pelicula</strong></td>
              <td><strong>Accion</strong></td>
            </tr>
    
            @foreach(var pelicula in Model)
            {
            <tr>
              <td>@pelicula.Nombre</td>
              <td>@Html.ActionLink("Modificar", "EditarPelicula", "Administracion", new { id = @pelicula.IdPelicula }, new {@class = "btn btn-warning" })</td>
            </tr>
            }
 
        </table>
               @Html.ActionLink("Agregar nueva pelicula", "NuevaPelicula", "Administracion", new {@class = "btn btn-success btn-block" })
          </div>
        </div>
    </div>

</div>

