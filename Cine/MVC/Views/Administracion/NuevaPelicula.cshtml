@model Entidades.Peliculas
@{
    ViewBag.Title = "NuevaPelicula";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12"><br />
    <div class="panel panel-success">
        <div class="panel-heading fondoCabeceraAdmin"><h3 class="panel-title text-center letraBlanca">NUEVA PELICULA</h3></div>
        <div class="panel-body">
            @using (Html.BeginForm("NuevaPelicula", "Administracion", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                  @Html.Label("Nombre de la Pelicula")
                  @Html.TextBox("Nombre", null, new { @class = "form-control" })
                  @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })    
                  <br />
                  @Html.Label("Descripcion")
                  @Html.TextArea("Descripcion", new { rows=6, columns=40, @class = "form-control" })
                  @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" }) 

                  <br />
                  @Html.Label("Genero")
                  @Html.DropDownListFor(model => model.IdGenero, new SelectList(ViewBag.Generos, "IdGenero", "Nombre"), new { @class = "form-control" })
    
                  <br />
                  @Html.Label("Calificacion")            
                  @Html.DropDownListFor(model => model.IdCalificacion, new SelectList(ViewBag.Calificaciones, "IdCalificacion", "Nombre"), new { @class = "form-control" })
     
                  <br />
                  @Html.Label("Imagen")
                  @Html.TextBox("Imagen", null, new { @class = "form-control", type = "file" })  
                  @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" }) 
    
                  <br />
                  @Html.Label("Duracion")
                  @Html.TextBox("Duracion", null, new { @class = "form-control" })    
                  @Html.ValidationMessageFor(model => model.Duracion, "", new { @class = "text-danger" })           
                  
                  <br />
                  <button type="submit" class="btn btn-success btn-block" >Agregar</button>
                 }
        </div>
    </div>
</div>
