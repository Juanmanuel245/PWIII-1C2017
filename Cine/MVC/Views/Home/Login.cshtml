@model Entidades.Usuarios
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}




<link href="~/Content/Css/Login.css" rel="stylesheet" />
<script src="~/Content/Js/Login.js"></script>

<div class="container">

    <div class="row" style="margin-top: 20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            @using(Html.BeginForm())
            {
                
                   <h2 class="text-center">Login</h2>

                    <hr class="colorgraph">
                    <div class="form-group">
                        @Html.Label("Email")
                        @Html.TextBoxFor(m => m.NombreUsuario,null,new {@class ="form-control input-lg"})
                        @Html.ValidationMessageFor(model => model.NombreUsuario)
                    </div>
                    <div class="form-group">
                        @Html.Label("Contraseña")
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                    <hr class="colorgraph">
                    <div class="row">
                        <div class="center">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Login">
                        </div>
                    </div>
            }
        </div>
    </div>

</div>
