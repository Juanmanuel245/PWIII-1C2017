<script src="~/Content/Js/Reserva.js"></script>

<h3 class="text-center">Reserva - Entrada</h3>
<div class="container">


    <div class="container">
        <!-- Formulario - Nueva Pelicula -->
     
        <!-- Formulario - Asignar Pelicula a Sala -->
