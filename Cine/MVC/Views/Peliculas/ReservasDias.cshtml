@model MVC.Models.FormatoDia
@{
    ViewBag.Title = "ReservasVersiones";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading fondoCabecera">
                <h3 class="panel-title text-center"><img src="~/Content/Images/logo.png" alt="Logo de Cinelam" /></h3>
            </div>
        <div class="panel-body text-center">
            <h5 class="text-center">Sigue lo siguientes pasos para realizar tu reserva.</h5>
            <img src="~/Content/Images/paso1OFF.png" /> <img src="~/Content/Images/paso2OFF.png" /> <img src="~/Content/Images/paso3.png" /> <img src="~/Content/Images/paso4OFF.png" /> <br /><br />
                    @using (Html.BeginForm("ReservaHorarios", "Peliculas", FormMethod.Post))
                    {
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading fondoCabeceraAdmin2">
                                    @Html.Label("Seleccionar el dia de la Funcion", new { @class = "panel-title " })
                                </div>
                                <div class="panel-body">
                                    @Html.DropDownListFor(model => model.id, new SelectList(ViewBag.Dias, "id", "fecha"), new { @class = "form-control" })
                                </div>
                            </div>
                                @Html.TextBox("IdPelicula", null, new{@class = "hidden", Value = ViewBag.Pelicula})
                                @Html.TextBox("IdVersion", null, new{@class = "hidden", Value = ViewBag.Version})
                                @Html.TextBox("IdSede", null, new{@class = "hidden", Value = ViewBag.Sede})
                                                
                                <button type="submit" class="btn btn-danger btn-block" >Ir al Paso 4</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
