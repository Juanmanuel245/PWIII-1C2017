@{
    ViewBag.Title = "ClienteReserva";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2 class="text-center">Cliente Reserva</h2>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">

            <div class="panel-heading">
                <h3 class="panel-title text-center">Reserva de entrada</h3>
            </div>
            <div class="panel-body">
                <form role="form">
                    <div class="col-md-3">
                        <div class="panel-body">
                            <img src="~/Content/Images/soldado.png" />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <table class="table">
                                    .
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Día</th>
                                <th>Género</th>
                                <th>Clasificación</th>
                                <th>Precio de la Entrada</th>
                            </tr>
                                    <tr>
                                        <td>Soldado Argentino</td>
                                        <td>drigida por brian</td>
                                        <td>Lunes 24 Abril</td>
                                        <td>Acción</td>
                                        <td>Buena</td>
                                        <td>200</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>


                </form>

            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Complete los siguientes datos</h3>
            </div>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="Nombre">Nombre</label>
                        <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Nombre de la Pelicula">
                    </div>

                    <div class="form-group">
                        <label for="Cantidad">Cantidad de entradas</label>
                        <input type="number" class="form-control" id="Cantidad" name="Nombre" placeholder="Nombre de la Pelicula">
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-2">Tipo de documento</label>
                        <div class="col-xs-3">
                            <select class="form-control">
                                <option>Seleccione Tipo de documento</option>
                                <option>L.E / DNI</option>
                                <option>PASAPORTE</option>
                                
                            </select>
                        </div>
                        <div class="col-xs-3">
                            <input type="text" class="form-control" id="Documento" name="Nombre" placeholder="Ingrese Número de documento">
                        </div>
                       
                    </div>

                    <button type="submit" class="btn btn-success btn-block">Confirmar Reserva</button>
                </form>
            </div>
        </div>

    </div>
</div>

