<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    
    
    <!-- Metas Tag -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="cine, cinema, cartelera, estrenos, pelicula, peliculas, reserva, entradas, online" />

    <!-- Hojas de Estilo -->
    <link href="@Url.Content("~/Content/Css/bootstrap.css")" rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/Content/Css/cine.css")" rel="stylesheet" type="text/css" media="all" />
</head>
<body>

    <nav class="navbar navbar-inverse fondoCabeceraAdmin" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
              <span class="sr-only">Desplegar navegación</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Inicio", "Home")"><img src="~/Content/Images/logo.png" class="tamanoLogo" alt="Logo de Cinelam" /></a>
        </div>
 
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav">
              <li>@Html.ActionLink("Gestion de Peliculas", "Peliculas", "Administracion")</li>
              <li>@Html.ActionLink("Gestion de Carteleras", "Carteleras", "Administracion")</li>
              <li>@Html.ActionLink("Gestion de Sedes", "Sedes", "Administracion")</li>
              <li>@Html.ActionLink("Reporte de Reservas", "Reportes", "Administracion")</li>
            </ul>
        </div>
    </nav>
    <div class="container">@RenderBody()</div>

    <script src="@Url.Content("~/Content/Js/Jquery/jquery.min.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script src="@Url.Content("~/Content/Js/globales.js")"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</body>
</html>